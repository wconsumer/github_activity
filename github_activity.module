/**
 * Implements hook_block_info().
 */
function github_activity_block_info() {
  $blocks = array();

  $blocks['github_activity'] = array(
    'info' => t('GitHub Activity'),
	'status' => TRUE,
    'region' => 'sidebar_first',
    'visibility' => BLOCK_VISIBILITY_PHP
  ); 

  return $blocks;
}

